all:
	MAKE.EXE clean
	TASM.EXE /ml VGA.ASM
	TCC.EXE -c -oAPP.OBJ APP.CPP
	TCC.EXE -c -oRAYTRCR.OBJ RAYTRCR.CPP
	TCC.EXE -c -oRENDERER.OBJ RENDERER.CPP
	TCC.EXE -c -oVGACPP.OBJ VGA.CPP
	TCC.EXE -c -oKEYBRD.OBJ KEYBRD.CPP
	TCC.EXE -c -oVEC3.OBJ VEC3.CPP
	TCC.EXE -c -oMATH.OBJ MATH.CPP
	TCC.EXE RETRORAY.CPP APP.OBJ RAYTRCR.OBJ RENDERER.OBJ VGA.OBJ VGACPP.OBJ KEYBRD.OBJ VEC3.OBJ MATH.OBJ
clean:
	DEL RETRORAY.EXE
	DEL RETRORAY.OBJ
	DEL APP.OBJ
	DEL RAYTRCR.OBJ
	DEL RENDERER.OBJ
	DEL VGA.OBJ
	DEL VGACPP.OBJ
	DEL KEYBRD.OBJ
	DEL VEC3.OBJ
	DEL MATH.OBJ

	